<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".authentication.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restraw_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile no."
            android:inputType="phone"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/primaryColorHint"
            android:textColorHint="@color/primaryColorHint"/>

         <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
             android:inputType="textPassword"
            android:layout_marginTop="32dp"
             android:backgroundTint="@color/primaryColorHint"
             android:textColorHint="@color/primaryColorHint"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signInButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="32dp"
            android:background="@drawable/registration_button_shape"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:textColor="@color/primaryColor"
            />
        <TextView
            android:id="@+id/takeATourTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take a Tour"
            android:paddingTop="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:layout_gravity="end"
            android:textColor="@color/primaryColor"
            android:layout_marginTop="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_gravity="end"
            android:textColor="@color/primaryColor"
            android:layout_marginTop="12dp"
            />

    </LinearLayout>
</LinearLayout>